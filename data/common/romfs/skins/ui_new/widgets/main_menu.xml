<listbox_options name="main_menu" rows="15">
    <data name="main_options"/>
    <origin>left</origin>
    <rect x="-35%" y="50%" w="35%" h="80%" radius="10"/>
    <color colors="gray"/>
    <outline colors="red" size="2"/>
    <visibility>hidden</visibility>
    <tween_position from.x="-34%" from.y="50%" to.x="-4%" to.y="50%" duration="0.1" loop="none"/>

    <!-- events -->
    <event type="button_pressed">
        <button name="start"/>
        <target name="main_menu"/>
        <target name="home_shade"/>
        <visibility>hidden</visibility>
        <process_inputs>false</process_inputs>
    </event>
    <event type="button_pressed">
        <button name="start"/>
        <target name="home"/>
        <target name="gamelist_listbox"/>
        <process_inputs>true</process_inputs>
    </event>
    <!--
    <event type="selection_changed">
        <condition target="main_menu_item_text" equal="APPS"/>
        <target name="gamelist_listbox"/>
        <data name="games" filter="app"/>
        <visibility>visible</visibility>
        <process_inputs>true</process_inputs>
    </event>
    -->
    <!-- events -->

    <!-- title -->
    <text name="menu_title">
        <rect x="97%" y="0" w="75%" h="7%"/>
        <origin>top_right</origin>
        <color colors="red"/>
        <outline colors="black" size="1"/>
        <font fonts="default"/>
        <string>MAIN OPTIONS</string>
    </text>

    <highlight name="main_menu_items_highlight">
        <rect radius="10"/>
        <color colors="green"/>
        <outline colors="red" size="2"/>
        <tween_alpha from="50" to="80" duration="0.5" loop="pingpong"/>
    </highlight>

    <group>
        <text name="group_name">
            <rect x="14%" y="50%" w="75%" h="90%"/>
            <origin>left</origin>
            <color colors="red"/>
            <outline colors="black" size="1"/>
            <font fonts="default"/>
            <string>${NAME}</string>
        </text>
        <rectangle>
            <rect x="0" y="97%" w="80%" h="2"/>
            <color colors="red"/>
        </rectangle>
    </group>

    <item>
        <text name="option_text">
            <rect x="14%" y="50%" w="40%" h="90%"/>
            <origin>left</origin>
            <color colors="yellow"/>
            <outline colors="red" size="1"/>
            <font fonts="default"/>
            <string>${NAME}</string>
        </text>
        <text name="option_value">
            <rect x="98%" y="50%" w="40%" h="90%"/>
            <origin>right</origin>
            <color colors="yellow"/>
            <outline colors="red" size="1"/>
            <font fonts="default"/>
            <string>${VALUE}</string>
        </text>
    </item>
</listbox_options>
